<UserControl x:Class="FluxoSistema.Dfe.Views.DfeMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluxoSistema.Dfe.Views"
             xmlns:viewmodels="clr-namespace:FluxoSistema.Dfe.ViewModels"
             xmlns:models="clr-namespace:FluxoSistema.Core.Models;assembly=FluxoSistema.Core"
             mc:Ignorable="d" 
            
             d:DesignHeight="720" d:DesignWidth="1024"
             Background="#F3F4F6">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="24" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Filtros" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBlock Text="Empresa:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        <ComboBox ItemsSource="{Binding Empresas}"
                          SelectedItem="{Binding EmpresaSelecionada}"
                          DisplayMemberPath="RazaoSocial"
                          Width="350"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>

                        <TextBlock Text="Período:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker Margin="0,0,5,0" Width="120"/>
                        <TextBlock Text="a" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker Width="120"/>
                        <TextBlock Text="Fornecedor:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                        <TextBox Width="300"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="Pesquisar" Padding="15,5"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Consultar SEFAZ" Command="{Binding ConsultarSefazCommand}" Background="#10B981" Foreground="White" FontWeight="Bold" Padding="10,5" Margin="0,0,10,0"/>

                    <Button Content="Ciência da Operação" Padding="10,5" Margin="0,0,5,0"
                Command="{Binding ManifestarCommand}"
                CommandParameter="{x:Static models:TipoEventoManifestacao.CienciaDaEmissao}"
                IsEnabled="{Binding IsItemSelected}"/>

                    <Button Content="Confirmar Operação" Padding="10,5" Margin="0,0,5,0"
                Command="{Binding ManifestarCommand}"
                CommandParameter="{x:Static models:TipoEventoManifestacao.ConfirmacaoDaOperacao}"
                IsEnabled="{Binding IsItemSelected}"/>
                    <Button Content="Desconhecer" Padding="10,5" Margin="0,0,5,0"
                Command="{Binding ManifestarCommand}"
                CommandParameter="{x:Static models:TipoEventoManifestacao.DesconhecimentoDaOperacao}"
                IsEnabled="{Binding IsItemSelected}"/>
                    <Button Content="Operação não Realizada" Padding="10,5"
                Command="{Binding ManifestarCommand}"
                CommandParameter="{x:Static models:TipoEventoManifestacao.OperacaoNaoRealizada}"
                IsEnabled="{Binding IsItemSelected}"/>
                </StackPanel>
            </Border>
        </Border>

        <DataGrid Grid.Row="3" 
          ItemsSource="{Binding Notas}"
          SelectedItem="{Binding NotaSelecionada}"
          AutoGenerateColumns="False" 
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#E0E0E0"
          Background="White"
          BorderThickness="1"
          BorderBrush="#DDDDDD"
          EnableRowVirtualization="True"
          CanUserReorderColumns="False"
          CanUserSortColumns="False">

            <DataGrid.Columns>

                <DataGridTemplateColumn Header=" " Width="30">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDown"/>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="FORNECEDOR" Binding="{Binding NomeEmitente}" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Header="N° NOTA" Binding="{Binding NumeroNota}" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="EMISSÃO" Binding="{Binding DataEmissao, StringFormat='dd/MM/yyyy'}" Width="120" IsReadOnly="True" />
                <DataGridTextColumn Header="VALOR" Binding="{Binding ValorTotal, StringFormat=C2}" Width="120" IsReadOnly="True" />
                <DataGridTemplateColumn Header="STATUS" Width="170" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="12" Height="24" Margin="5,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ManifestoStatus}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10,0" />
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ManifestoStatus}" Value="Confirmada">
                                                <Setter Property="Background" Value="#D1FAE5"/>
                                                <Setter Property="ToolTip" Value="Manifesto de confirmação realizado."/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ManifestoStatus}" Value="Pendente">
                                                <Setter Property="Background" Value="#FEF3C7"/>
                                                <Setter Property="ToolTip" Value="Aguardando manifestação do destinatário."/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ManifestoStatus}" Value="Ciencia">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                                <Setter Property="ToolTip" Value="Ciência da emissão realizada."/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ManifestoStatus}" Value="Desconhecida">
                                                <Setter Property="Background" Value="#FEE2E2"/>
                                                <Setter Property="ToolTip" Value="Operação marcada como desconhecida."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="AÇÃO" Width="150" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Lançar Entrada"
                    Command="{Binding DataContext.LancarEntradaCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                    IsEnabled="{Binding DataContext.IsItemSelected, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="4" 
           Text="{Binding Notas.Count, StringFormat='Exibindo {0} nota(s).'}" 
           Margin="0,10,0,0" Foreground="Gray" HorizontalAlignment="Right"/>

        <TextBlock Grid.Row="4" Text="Exibindo 0 de 0 notas." Margin="0,10,0,0" Foreground="Gray" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>