<UserControl x:Class="FluxoSistema.Entrada.Views.EntradaDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:FluxoSistema.Entrada.Views"
             xmlns:commonViews="clr-namespace:FluxoSistema.ComponentesComuns.Views;assembly=FluxoSistema.ComponentesComuns"
             xmlns:converters="clr-namespace:FluxoSistema.Vendas.Converters;assembly=FluxoSistema.Vendas"

             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1024"
             Background="#F9FAFB">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>

        <Grid IsEnabled="{Binding IsDashboardInterativo}">
            <DockPanel Margin="20">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Content="Nova Entrada Manual" 
                            Command="{Binding AbrirNovaEntradaCommand}"
                            HorizontalAlignment="Left" 
                            Margin="30,0,0,0"
                            Padding="12,8"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding Entradas}"
                          SelectedItem="{Binding EntradaSelecionada}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataEmissao, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                        <DataGridTextColumn Header="Fornecedor" Binding="{Binding NomeFornecedor}" Width="*"/>
                        <DataGridTextColumn Header="Nº Nota" Binding="{Binding NumeroNota}" Width="120"/>
                        <DataGridTextColumn Header="Série" Binding="{Binding Serie}" Width="80"/>
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C2}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Grid>

        <Grid Visibility="{Binding IsNovaEntradaAberta, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="Black" Opacity="0.4"/>
            <local:NovaEntradaView DataContext="{Binding NovaEntradaViewModel}"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Margin="20"/>
        </Grid>

        <Grid Visibility="{Binding IsConfirmacaoCadastroVisivel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="Black" Opacity="0.4"/>
            <Border HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="30"
                    MinWidth="400">
                <StackPanel>
                    <TextBlock Text="Fornecedor Não Encontrado" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="O fornecedor desta nota não está cadastrado. Deseja cadastrá-lo agora?" TextWrapping="Wrap" Margin="0,0,0,20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Não" Command="{Binding CancelarCadastroFornecedorCommand}" Padding="15,8" Margin="0,0,10,0"/>
                        <Button Content="Sim, Cadastrar" Command="{Binding ConfirmarCadastroFornecedorCommand}" Padding="15,8" FontWeight="Bold" Background="#10B981" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Visibility="{Binding IsCadastroFornecedorVisivel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="Black" Opacity="0.4"/>
            <commonViews:CadastroFornecedorView DataContext="{Binding CadastroFornecedorViewModel}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="800"
                                                  Height="450"/>
        </Grid>

    </Grid>
</UserControl>